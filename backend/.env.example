# Database (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database"

# JWT Secret - IMPORTANT: Generate a random string for production!
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server (Railway sets PORT automatically)
PORT=3001
NODE_ENV="production"

# CORS - Set to your frontend URL
# For Railway: https://your-frontend-app.up.railway.app
FRONTEND_URL="http://localhost:5173"
